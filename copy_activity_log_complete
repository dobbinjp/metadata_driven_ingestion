SELECT '@{pipeline().DataFactory}' as SynapseWorkspaceName,
'@{pipeline().Pipeline}' as PipelineName,
'@{pipeline().RunId}' as RunId,
'@{pipeline().TriggerType}' as TriggerType,
'@{pipeline().TriggerId}' as TriggerId,
'@{pipeline().TriggerName}' as TriggerName,
'@{pipeline().TriggerTime}' as TriggerTimeUTC,
'@{activity('Copy data').output.executionDetails[0].start}' as CopyActivityStartTimeUTC,
'@{utcNow()}' as CopyActivityEndTimeUTC,
'@{pipeline().GroupId}' as PipelineGroupId, 
'@{activity('Copy data').output.dataRead}' as dataRead,
'@{activity('Copy data').output.dataWritten}' as dataWritten,
'@{activity('Copy data').output.filesWritten}' as filesWritten,
'@{activity('Copy data').output.sourcePeakConnections}' as sourcePeakConnections,
'@{activity('Copy data').output.sinkPeakConnections}' as sinkPeakConnections,
'@{activity('Copy data').output.rowsRead}' as rowsRead,
'@{activity('Copy data').output?.rowsCopied}' as rowsCopied,
'@{activity('Copy data').output.copyDuration}' as copyDuration,
'@{activity('Copy data').output.throughput}' as throughput,
'@{activity('Copy data').output.effectiveIntegrationRuntime}' as effectiveIntegrationRuntime,
'@{activity('Copy data').output.usedDataIntegrationUnits}' as usedDataIntegrationUnits,
'@{activity('Copy data').output.billingReference.activityType}' as activityType,
'@{activity('Copy data').output.billingReference.billableDuration[0].meterType}' as BillableMeterType,
'@{activity('Copy data').output.billingReference.billableDuration[0].duration}' as BillableDuration,
'@{activity('Copy data').output.billingReference.billableDuration[0].unit}' as BillableUnit,
'@{activity('Copy data').output.usedParallelCopies}' as usedParallelCopies,
'@{activity('Copy data').output.executionDetails[0].source.type}' as SourceType,
'@{activity('Copy data').output.executionDetails[0].source.region}' as SourceRegion,
'@{activity('Copy data').output.executionDetails[0].sink.type}' as SinkType,
'@{activity('Copy data').output.executionDetails[0].sink.region}' as SinkRegion,
'@{activity('Copy data').output.executionDetails[0].status}' as ExecutionStatus,
'@{activity('Copy data').output.executionDetails[0].detailedDurations.queuingDuration}' as queuingDuration,
'@{activity('Copy data').output.executionDetails[0].detailedDurations.timeToFirstByte}' as timeToFirstByte,
'@{activity('Copy data').output.executionDetails[0].detailedDurations.transferDuration}' as transferDuration,
'@{if(empty(activity('Copy data').output?.errors),'',
    replace(activity('Copy data').output?.errors[0].Message,'''',''))}' as ErrorMessage,
'@{if(empty(activity('Copy data').output?.errors),'',    
    activity('Copy data').output?.errors[0].Code)}' as ErrorCode
